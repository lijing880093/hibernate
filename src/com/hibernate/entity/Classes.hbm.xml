<?xml version="1.0"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- package="com.hibernate.entity" -->
<hibernate-mapping package="com.hibernate.entity" > <!-- mapping 是hibernate映射文件  -->
<!--  name=类名   table=表名   -->
<class name="Classes" table="t_classes"  >
    <!--id 主键  name 属性  column 列名   type 类名  -->
    <id name="cId" column="C_ID" type="java.lang.Integer">
        <!--  主键生成策略  increment hibernate框架的生成策略 native是mysql数据库  -->
        <generator class="native" />
    </id>
    <property name="className" type="java.lang.String" column="CLASSNAME"/>

    <!-- cascade="save-update"  强制级联保存 -->
    <set name="studentSet" cascade="save-update">
        <key column="C_ID"></key>
        <one-to-many class="Student"></one-to-many>
    </set>


</class>

</hibernate-mapping>
