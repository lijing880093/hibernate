<?xml version="1.0"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- package="com.hibernate.entity" -->
<hibernate-mapping package="com.hibernate.entity.one_one.entity" > <!-- mapping 是hibernate映射文件  -->
<!--  name=类名   table=表名   -->
<class name="Wife" table="t_wife"  >
    <!--id 主键  name 属性  column 列名   type 类名  -->
    <id name="wid" column="w_id" type="java.lang.Integer">
        <!--  主键生成策略  increment hibernate框架的生成策略 native是mysql数据库  -->
        <generator class="native" />
    </id>
    <property name="name" type="java.lang.String" column="w_name"  />

    <one-to-one name="husband" class="Husband" constrained="true"></one-to-one>
</class>

</hibernate-mapping>
