<?xml version="1.0"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- package="com.hibernate.entity" -->
<hibernate-mapping package="com.hibernate.entity" > <!-- mapping 是hibernate映射文件  -->
<!--  name=类名   table=表名   -->
<class name="Employee" table="t_employee"  >
    <!--id 主键  name 属性  column 列名   type 类名  -->
    <id name="id" column="e_id" type="java.lang.Integer">
        <!--  主键生成策略  increment hibernate框架的生成策略 native是mysql数据库  -->
        <generator class="native" />
    </id>
    <property name="name" type="java.lang.String" column="e_name"  />

    <many-to-one name="department" column="d_id" class="Department"  cascade="save-update"></many-to-one>
</class>

</hibernate-mapping>
